#include "/home/stefan/.config/colors/term_colors"

!! Perl extensions
! url-select (part of urxvt-perls package)
URxvt.perl-ext-common:      default,clipboard,matcher,keyboard-select
URxvt.keysym.M-u: perl:     url-select:select_next
URxvt.url-select.autocopy:  true
URxvt.url-select.button:    2
URxvt.url-select.underline: true
URxvt.url-launcher:         /usr/bin/chromium
URxvt.matcher.button:       1

!! CopyPaste Keys
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

URxvt.scrollBar:        false
URxvt.saveLines:        15000

URxvt.font.letterSpace: -1

URxvt.font: xft:Source Code Pro:size=10,\
            xft:Deja Vu Sans Mono:size=10,\
            xft:Symbola:size=10
URxvt.boldFont: xft:Source Code Pro:size=10,\
                xft:Deja Vu Sans Mono:size=10,\
                xft:Symbola:size=10

URxvt.urgentOnBell:     true

rofi.lines: 10
rofi.eh: 2
rofi.padding: 200
rofi.fullscreen: true
rofi.bw: 0
rofi.separator-style: none
rofi.hide-scrollbar: true

rofi.color-window: argb:f0080808, #ffffff, #000000
rofi.color-normal: argb:00080808, #ffffff, argb:00080808, argb:609400d3, #ffffff
rofi.color-active: argb:e0080808, #ffffff, argb:e0080808, argb:60ff8c00, #ffffff
rofi.color-urgent: argb:e0080808, #ffffff, argb:e0080808, argb:60006400, #ffffff
