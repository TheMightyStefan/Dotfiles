[colors]
FOREGROUND = #EBDBB2
UNFOCUSED_FOREGROUND = #2D2D2D

GREEN = #84BD00

BACKGROUND = ${xrdb:background}

[bar/bar]
monitor = eDP-1

width = 100%
height = 20

offset-x = 0%
radius = 0.0

fixed-center = true

background = ${colors.BACKGROUND}

line-size = 0
border-color = #F00

border-size = 0

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Misc Termsyn:size8;1
font-1 = FontAwesome:fontformat=truetype:size=10;1

modules-left = i3
modules-center = music
modules-right = date volume battery

[module/i3]
type = internal/i3
format = <label-state><label-mode>

index-sort = true

enable-click = true
enable-scroll =false

strip-wsnumbers = true

label-focused = " %name%"
label-focused-foreground = ${colors.FOREGROUND}
label-focused-background = ${colors.BACKGROUND}

label-unfocused = " %name%"
label-unfocused-foreground = ${colors.UNFOCUSED_FOREGROUND}
label-unfocused-background = ${colors.BACKGROUND}

label-alert = " %name%"
label-alert-foreground = ${colors.GREEN}
label-alert-background = ${colors.BACKGROUND}

[module/music]
type = custom/script
exec = sh ~/.config/polybar/music.sh
interval = 2

format = <label>
format-foreground = ${colors.GREEN}
label =  %output%

[module/date]
type = internal/date
interval = 1

date = 
date-alt = "%A - %d/%m/%Y"

time = "%H:%M "
time-alt = 

format = <label>
format-foreground = ${colors.FOREGROUND}
label = %date% %time%

[module/volume]
type = internal/volume

interval = 1

format-muted-background = ${colors.BACKGROUND}
format-volume-background = ${colors.BACKGROUND}
format-volume = "  <label-volume> <ramp-volume>  "

format-muted = <label-muted>
label-muted = "  0%   "

label-volume = "  %percentage%%"

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 100

label-charging = " %percentage%%"
label-discharging = " %percentage%%"
label-full = " %percentage%%"

format-full-background = ${colors.BACKGROUND}
format-charging-background = ${colors.BACKGROUND}
format-charging = "<label-charging> <animation-charging>  "
format-charging-underline = #ffb52a

format-discharging-background = ${colors.BACKGROUND}
format-discharging = "<label-discharging> <ramp-capacity>  "
format-discharging-underline = ${self.format-charging-underline}

format-full = 
format-full-prefix-foreground = ${colors.FOREGROUND}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

ramp-capacity-foreground = ${colors.FOREGROUND}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
